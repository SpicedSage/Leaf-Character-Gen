#:import utils kivy.utils


<CharacterView>:
	
	# wrapper
	GridLayout:
		canvas.before:
            Color: 
            	rgb: utils.get_color_from_hex('#DDDDDD')
            Rectangle:
                size: self.size
                pos: self.pos
		cols:2
		
		# sidebar
		GridLayout:
			canvas.before:
                Color: 
                	rgb: utils.get_color_from_hex('#FFFFFF')
	            Rectangle:
	                size: self.size
	                pos: self.pos


			rows:2

			size_hint: None, None
			size: 250, root.height

			# logo
			Image:
				source: "Images\Logo\Tree-Logo.jpg"

				size_hint: None, None
				size: 250, 150

			# navigation
			GridLayout:
				cols:1

	            row_default_height: 50
	            row_force_default: True

	            col_default_width: 250
	            col_force_default: True
			
				ButtonGrid:
					on_press: 
						self.set_bgcolor(229, 229, 229, 100)

					on_release:
						self.canvas.before.clear()

					cols:2

					FloatLayout:
						size_hint_x: None
						width:60

						Image:
							source: "Images\Logo\Py-Logo.png"

							size_hint: None, None
							size: 25, 25

							pos: ((self.parent.width - self.width) / 2), self.parent.pos[1] + ((self.parent.height - self.height) / 2)

					Label:
						text: "Home"
						font_size:18
						color:0,0,0,1

						text_size: self.size

						halign: "left"
						valign: "middle"

						padding_x:10
				
				ButtonGrid:
					on_press: 
						self.set_bgcolor(229, 229, 229, 100)

					on_release:
						self.canvas.before.clear()
					
					cols:2

					FloatLayout:
						size_hint_x: None
						width:60

						Image:
							source: "Images\Logo\Py-Logo.png"

							size_hint: None, None
							size: 25, 25

							pos: ((self.parent.width - self.width) / 2), self.parent.pos[1] + ((self.parent.height - self.height) / 2)

					Label:
						text: "Characters"
						font_size:18
						color:0,0,0,1

						text_size: self.size

						halign: "left"
						valign: "middle"

						padding_x:10
				
				ButtonGrid:
					on_press: 
						self.set_bgcolor(229, 229, 229, 100)

					on_release:
						self.canvas.before.clear()

					cols:2

					FloatLayout:
						size_hint_x: None
						width:60

						Image:
							source: "Images\Logo\Py-Logo.png"

							size_hint: None, None
							size: 25, 25

							pos: ((self.parent.width - self.width) / 2), self.parent.pos[1] + ((self.parent.height - self.height) / 2)

					Label:
						text: "Item Libraries"
						font_size:18
						color:0,0,0,1

						text_size: self.size

						halign: "left"
						valign: "middle"

						padding_x:10
				
				ButtonGrid:
					on_press: 
						self.set_bgcolor(229, 229, 229, 100)

					on_release:
						self.canvas.before.clear()

					cols:2

					FloatLayout:
						size_hint_x: None
						width:60

						Image:
							source: "Images\Logo\Py-Logo.png"

							size_hint: None, None
							size: 25, 25

							pos: ((self.parent.width - self.width) / 2), self.parent.pos[1] + ((self.parent.height - self.height) / 2)

					Label:
						text: "Guide"
						font_size:18
						color:0,0,0,1

						text_size: self.size

						halign: "left"
						valign: "middle"

						padding_x:10
				
				ButtonGrid:
					on_press: 
						self.set_bgcolor(229, 229, 229, 100)

					on_release:
						self.canvas.before.clear()
	
					cols:2

					FloatLayout:
						size_hint_x: None
						width:60

						Image:
							source: "Images\Logo\Py-Logo.png"

							size_hint: None, None
							size: 25, 25

							pos: ((self.parent.width - self.width) / 2), self.parent.pos[1] + ((self.parent.height - self.height) / 2)

