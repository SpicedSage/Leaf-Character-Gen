						background_default: ""
						background_color: 0, 0, 0, 0

						size_hint: None, None
						size:50,50 

						Image:
							source: 'Images\Logo\Py-Logo.png'

							size_hint: None, None
							size:25, 25

							pos_hint: {'center_x': None, 'center_y': None}
							pos: (self.parent.pos[0] + ((self.parent.width - self.width) / 2)), (self.parent.pos[1] + ((self.parent.height - self.height) / 2))

					Label: 
						text: "Temporary Text"
						font_size:24
						color: 1, 1, 1, 1

						text_size: self.size

						halign: "left"
						valign: "middle"

						padding_x:10

