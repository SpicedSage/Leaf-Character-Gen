							pos: ((self.parent.width - self.width) / 2), self.parent.pos[1] + ((self.parent.height - self.height) / 2)

					Label:
						text: "Github"
						font_size:18
						color:0,0,0,1

						text_size: self.size

						halign: "left"
						valign: "middle"

						padding_x:10

		# character info
		GridLayout:
			cols:1
			rows:2

			# character page navagation
			GridLayout:
				canvas.before:
	                Color: 
	                	rgb: utils.get_color_from_hex('#4caf50')
		            Rectangle:
		                size: self.size
		                pos: self.pos

				rows:2

				size_hint_y: None
				height: 100

				GridLayout:
					cols:3

