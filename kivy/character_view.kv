					ButtonGrid:
				        cols:1
				        rows:2

				        on_press:
				        	self.set_bgcolor(255, 255, 255, 13)

				        on_release:
							self.canvas.before.clear()

						Label:
							text: "Persona"
							font_size:18
							halign: "center"

						GridLayout:
							cols:1
							rows:1

							size_hint_y: None
							height: 2

							canvas.after:
								Color:
									rgba: utils.get_color_from_hex('#d13b2e00')
					            Rectangle:
					                size: self.size
					                pos: self.pos


					ButtonGrid:
				        cols:1
				        rows:2

				        on_press:
				        	self.set_bgcolor(255, 255, 255, 13)

				        on_release:
							self.canvas.before.clear()

						Label:
							text: "Journal"
							font_size:18
							halign: "center"

						GridLayout:
							cols:1
							rows:1

							size_hint_y: None
							height: 2

							canvas.after:
								Color:
									rgba: utils.get_color_from_hex('#d13b2e00')
					            Rectangle:
					                size: self.size
