#:import utils kivy.utils
<Button>:	
	font_size: 18
	color: (0,0,0,1)

	text_size: self.size
	valign: 'center'
	halign: 'left'
	padding_x: 10

	background_normal: ""
	background_color: (1,1,1,1)

<ButtonGrid>:


<LandingScreen>:
    BoxLayout:
        Button:
            text: 'Goto settings'
            on_press: root.manager.current = 'settings_s'
        Button:
            text: 'Goto pizza'
            on_press: root.manager.current = 'pizza_s'
        Button:
            text: 'Goto main'
            on_press: root.manager.current = 'program_s'
        Button:
            text: 'Quit'
            on_press: root.landing_f.close()

<SettingsScreen>:
    BoxLayout:
        Button:
            text: 'My settings button'
            on_press: root.settings_f.alert()
        Button:
            text: 'Back to menu'
            on_press: root.manager.current = 'landing_s'

<PizzaScreen>:
	
	inputname:inputname
	pizza:pizza
	color:color

	GridLayout:
		cols:1
		size: root.width, root.height	

		GridLayout:
			cols:2

			Label:
				text: "Name"
			TextInput:
				id: inputname
				multiline:False

			Label:
				text: "Pizza"
			TextInput:
				id: pizza
				multiline:False
			
			Label:
				text: "Colour"
			TextInput:
				id: color
				multiline:False

		Button: 
			text: "Submit"
			font_size:32
			on_press: app.pizza_f.submit(root)

			background_normal: ""
			background_color: "#FFA539"

